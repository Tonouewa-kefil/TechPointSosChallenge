# Login screen assets
<Login>:
    # Username text field
    TextInput:
        font_size: 17
        size: root.width * 0.504, root.height * 0.05
        center_x: root.center_x
        top: root.top - (root.top * 0.28)
        text:"Username"

    # Password text field
    TextInput:
        font_size: 17
        size: root.width * 0.504, root.height * 0.05
        center_x: root.center_x
        top: root.top - (root.top * 0.37)
        text:"Password"
        password = true

    Button:
        font_size: 13
        size: root.width * 0.31, root.height * 0.035
        center_x: root.center_x
        top:root.top - (root.top * 0.47)
        text:"Sign in"
        background_color:(0.2,0.6,1,1)

        # When pressed, switch to the CreateAccount screen
        on_press: root.manager.current = 'CreateAccount'

    Button:
        font_size: 17
        size: root.width * 0.504, root.height * 0.05
        center_x:root.center_x
        top:root.top - (root.top * 0.74)
        text:"Create Account"

<CreateAccount>:
    Button:
        text:"<"
        font_size: 30
        center_x:  (root.width * 0.0613)
        top:root.top - (root.top * 0.1)
        size: root.width * 0.031, root.height * 0.04
        background_color:(0,0,0,1)

        # When pressed, switch to the Login screen
        on_press: root.manager.current = 'Login'

    Label:
        text:"Welcome!"
        font_size: 30
        center_x: root.center_x
        top: root.top - (root.top * 0.12)
    Label:
        text:"Thanks for helping to \n keep transportation in our city safe"
        font_size: 15
        center_x: root.center_x
        top: root.top - (root.top * 0.19)
        halign: 'center'
        valign: 'middle'
    Label:
        text:"Let's get your Account set up..."
        font_size: 17
        center_x: root.center_x
        top: root.top - (root.top * 0.40)
    TextInput:
        font_size: 17
        size: root.width * 0.504, root.height * 0.05
        center_x: root.center_x
        top: root.top - (root.top * 0.62)
        text:"Username"
    TextInput:
        font_size: 17
        size: root.width * 0.504, root.height * 0.05
        center_x: root.center_x
        top: root.top - (root.top * 0.69)
        text:"Password"
    TextInput:
        font_size: 17
        size: root.width * 0.504, root.height * 0.05
        center_x: root.center_x
        top: root.top - (root.top * 0.77)
        text:"Confirm Password"
    Button:
        font_size: 17
        size: root.width * 0.504, root.height * 0.05
        center_x:root.center_x
        top:root.top - (root.top * 0.85)
        text:"Create!"
