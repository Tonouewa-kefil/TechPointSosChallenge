            halign: 'center'
            valign: 'middle'
            color: 0,0,0,1
        Label:
            text: "Phone:"
            font_size: 18
            pos_hint: {"top":0.55, "x":0.123 }
            size_hint:0.1627,0.036
            halign: 'center'
            valign: 'middle'
            color: 0,0,0,1
        # Input for phone number
        TextInput:
            id:UserPhoneNumber
            font_size: 16
            pos_hint: { "top":0.56, "x":0.30 }
            size_hint:0.536,0.06147
            text:"Enter a phone number"
            #on_focus: self.text = ""
            multiline: False
            input_type: 'tel'
            write_tab: False
            #on_text_validate: root.foo()
        # "Email"
        Label:
            text: "Email:"
            font_size: 18
            pos_hint: {"top":0.456, "x":0.123 }
